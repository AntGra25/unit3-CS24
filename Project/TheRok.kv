<RegisterScreen>:

    FitImage:
        size_hint: 1, 1
        source: 'LoginBG.jpg'

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: 'white'
        radius: [10, 10, 10, 10]

        MDLabel:
            size_hint: 1, 0.25
            halign: 'center'
            text: 'Register'
            font_size: '36pt'

        MDTextField:
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Enter username'
            helper_text_mode: 'persistent'
            icon_left: 'account'

        MDTextField:
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Enter email'
            helper_text_mode: 'persistent'
            icon_left: 'email'

        MDTextField:
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Enter password'
            helper_text_mode: 'persistent'
            icon_left: 'key'

        MDTextField:
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Confirm password'
            helper_text_mode: 'persistent'
            mode: 'rectangle'
            icon_left: 'key'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 150
            size_hint: 0.8, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDFlatButton:
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Submit'
                md_bg_color: '#ffbc1e'
                text_color: 'white'
                on_press:
                    button_pressed()

            MDFlatButton:
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Cancel'
                md_bg_color: '#fa183e'
                text_color: 'white'
                on_press:
                    root.parent.current = 'Login'

<EmployeeInfo>:
    MDLabel:
        pos_hint: {'center_x':.5, 'top':.9}
        text: 'Employee Information'
        font_style: 'H2'
        halign: 'center'
        size_hint: 0.8, 0.08

    MDLabel:
        text: "New Record"
        font_style: 'H4'
        pos_hint: {'center_x':.5, 'top':.3}

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: .8, .08
        pos_hint: {'center_x':.5, 'top':.2}

        MDTextField:
            id: full_name
            hint_text: 'Name'
            size_hint_x: .2
        MDTextField:
            id: email
            hint_text: 'Email address'
            size_hint_x: .2
        MDTextField:
            id: c_position
            hint_text: 'Position'
            size_hint_x: .2
        MDRaisedButton:
            text: "save"
            on_release: root.save()

    BackButton:
        on_press: self.parent.current = "Omenu"

<BackButton>:
    MDRectangleFlatIconButton:
        icon: "arrow-left"
        text: "Back"
        pos_hint: {'left': 1, 'bottom': 1}
        font_size: "10pt"
        text_color: "white"
        md_bg_color: "blue"
