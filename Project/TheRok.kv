ScreenManager:
    LoginScreen:
        name: 'Login'
    RegisterScreen:
        name: 'Register'
    OwnerMenu:
        name: 'Omenu'
    CustomerServiceMenu:
        name: 'Cmenu'
    EmployeeInfo:
        name: 'EmployeeInfo'
    RegisterCustomer:
        name: 'CustomerReg'
    EmployeeInventory:
        name: 'EmployeeInv'
    OwnerInventory:
        name: 'OwnerInv'
    OrderHistory:
        name: 'OrderHist'

<LoginScreen>:
    FitImage:
        size_hint: 1, 1
        source: 'LoginBG.jpg'

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: 'white'
        radius: [10, 10, 10, 10]

        MDLabel:
            size_hint: 1, 0.5
            halign: 'center'
            text: 'Login'
            font_size: '36pt'

        MDTextField:
            id: uname
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Enter username or email'
            helper_text_mode: 'persistent'
            icon_left: 'email'

        MDTextField:
            id: upass
            size_hint: 0.8, 0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            hint_text: 'Enter password'
            helper_text_mode: 'persistent'
            icon_left: 'key'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 150
            size_hint: 0.8, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            MDFlatButton:
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Login'
                md_bg_color: '#ffbc1e'
                text_color: 'white'
                on_press:
                    root.try_login()


            MDFlatButton:
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'Signup'
                md_bg_color: '#fa183e'
                text_color: 'white'
                on_press:
                    root.parent.current = 'Register'

